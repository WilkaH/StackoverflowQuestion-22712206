<UserControl x:Class="LookslessVsUserControl.MrWhiteWithCodeBehind"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:LookslessVsUserControl="clr-namespace:LookslessVsUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             
             >
  <Border Background="White" CornerRadius="9" Padding="9">
    <ContentPresenter Content="{Binding MyContent, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type LookslessVsUserControl:MrWhiteWithCodeBehind}}}" />
  </Border>
</UserControl>
